---
import { getCollection } from 'astro:content';
import '../../styles/global.css';

export async function getStaticPaths() {
  const portfolioEntries = await getCollection('portfolio');
  return portfolioEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={entry.data.description} />
    
    <title>{entry.data.title} | Communication Studies Portfolio</title>
    <meta property="og:title" content={entry.data.title} />
    <meta property="og:description" content={entry.data.description} />
    <meta property="og:type" content="article" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    <main class="article-container">
      <nav class="breadcrumb">
        <div class="container">
          <a href="/" class="back-link">← Back to Portfolio</a>
        </div>
      </nav>

      <article class="content">
        <div class="container">
          <header class="article-header">
            <h1>{entry.data.title}</h1>
            <p class="article-meta">
              {entry.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </p>
            {entry.data.tags && (
              <div class="tags">
                {entry.data.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
          </header>

          <div class="prose">
            <Content />
          </div>
        </div>
      </article>

      <footer class="article-footer">
        <div class="container">
          <a href="/" class="back-link-footer">← Back to Portfolio</a>
        </div>
      </footer>
    </main>
  </body>
</html>

<style>
  .article-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .breadcrumb {
    padding: var(--spacing-lg) 0;
    border-bottom: 1px solid var(--color-border);
  }

  .back-link,
  .back-link-footer {
    font-family: var(--font-sans);
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--transition-base);
    display: inline-block;
  }

  .back-link:hover,
  .back-link-footer:hover {
    color: var(--color-accent-primary);
  }

  .content {
    flex: 1;
    padding: var(--spacing-3xl) 0;
  }

  .article-header {
    margin-bottom: var(--spacing-3xl);
    padding-bottom: var(--spacing-xl);
    border-bottom: 1px solid var(--color-border);
  }

  .article-header h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 500;
    margin-bottom: var(--spacing-md);
    line-height: 1.2;
  }

  .article-meta {
    font-family: var(--font-sans);
    font-size: 0.9375rem;
    color: var(--color-text-tertiary);
    margin-bottom: var(--spacing-md);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
    margin-top: var(--spacing-md);
  }

  .tag {
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: var(--color-accent-primary);
    background: var(--color-bg-secondary);
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-sm);
    border: 1px solid var(--color-border);
  }

  .prose {
    max-width: 70ch;
    font-size: 1.125rem;
    line-height: 1.8;
  }

  .prose :global(h2) {
    font-size: 2rem;
    font-weight: 600;
    margin-top: var(--spacing-3xl);
    margin-bottom: var(--spacing-lg);
    color: var(--color-text-primary);
  }

  .prose :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-md);
    color: var(--color-text-primary);
  }

  .prose :global(h4) {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-sm);
    color: var(--color-text-primary);
  }

  .prose :global(p) {
    margin-bottom: var(--spacing-lg);
    color: var(--color-text-secondary);
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: var(--spacing-lg);
    padding-left: var(--spacing-xl);
  }

  .prose :global(li) {
    margin-bottom: var(--spacing-sm);
    color: var(--color-text-secondary);
  }

  .prose :global(strong) {
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .prose :global(em) {
    font-style: italic;
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--color-accent-primary);
    padding-left: var(--spacing-lg);
    margin: var(--spacing-xl) 0;
    font-style: italic;
    color: var(--color-text-secondary);
  }

  .prose :global(code) {
    font-family: 'JetBrains Mono', monospace;
    background: var(--color-bg-secondary);
    padding: 0.125rem 0.375rem;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
    border: 1px solid var(--color-border);
  }

  .prose :global(pre) {
    background: var(--color-bg-secondary);
    padding: var(--spacing-lg);
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin: var(--spacing-xl) 0;
    border: 1px solid var(--color-border);
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
    border: none;
  }

  .article-footer {
    padding: var(--spacing-2xl) 0;
    border-top: 1px solid var(--color-border);
    margin-top: var(--spacing-3xl);
  }

  @media (max-width: 768px) {
    .breadcrumb {
      padding: var(--spacing-md) 0;
    }

    .content {
      padding: var(--spacing-2xl) 0;
    }

    .article-header {
      margin-bottom: var(--spacing-2xl);
      padding-bottom: var(--spacing-lg);
    }

    .article-header h1 {
      font-size: 2rem;
    }

    .prose {
      font-size: 1rem;
    }

    .prose :global(h2) {
      font-size: 1.75rem;
      margin-top: var(--spacing-2xl);
    }

    .prose :global(h3) {
      font-size: 1.375rem;
      margin-top: var(--spacing-xl);
    }

    .article-footer {
      padding: var(--spacing-xl) 0;
      margin-top: var(--spacing-2xl);
    }
  }
</style>
